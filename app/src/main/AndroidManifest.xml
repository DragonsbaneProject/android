<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.dragonsbane.android">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".DBApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Base.Theme.DB">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Neurocog -->
        <activity android:name=".neurocog.ui.TestDisclaimerActivity" />
        <activity android:name=".neurocog.ui.PreTestActivity" />
        <activity android:name=".neurocog.ui.SimpleMemoryTestActivity" />
        <activity android:name=".neurocog.ui.ComplexMemoryTestActivity" />
        <activity android:name=".neurocog.ui.WorkingMemoryTestActivity" />
        <activity android:name=".neurocog.ui.TestReportActivity" />
        <activity android:name=".neurocog.ui.TestHistoryActivity" />
        <activity android:name=".neurocog.ui.SettingsActivity" />
        <activity android:name=".neurocog.ui.ViewUserProfileActivity"/>

    </application>

</manifest>